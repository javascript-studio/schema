{
  "name": "@studio/schema",
  "version": "3.4.0",
  "description": "Plain JavaScript objects with runtime type guarantees",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "mocha './{,!(node_modules)/**}/*.test.js'",
    "test:browser": "mochify './{,!(node_modules)/**}/*.test.js'",
    "watch": "npm run test:node -- --watch",
    "preversion": "npm run lint && npm run prettier:check && npm test",
    "version": "changes --commits --footer",
    "postversion": "git push --follow-tags && npm publish",
    "prettier:check": "prettier --check *.{js,json,md}",
    "prettier:write": "prettier --write *.{js,json,md}",
    "prepare": "husky install"
  },
  "keywords": [
    "schema",
    "json",
    "object",
    "types",
    "validate",
    "validation",
    "proxy"
  ],
  "author": "Maximilian Antoni <max@javascript.studio>",
  "homepage": "https://github.com/javascript-studio/schema",
  "eslintConfig": {
    "extends": "@studio"
  },
  "devDependencies": {
    "@sinonjs/referee-sinon": "^9.0.2",
    "@studio/changes": "^2.2.0",
    "@studio/eslint-config": "^2.0.0",
    "@studio/related-tests": "^0.2.0",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^8.4.0",
    "mochify": "^8.0.0",
    "prettier": "^2.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/javascript-studio/studio-schema.git"
  },
  "files": [
    "CHANGES.md",
    "**/*.js",
    "!lib/*.test.js",
    "!test/**"
  ],
  "license": "MIT"
}
